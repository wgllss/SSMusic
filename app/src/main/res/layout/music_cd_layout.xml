<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/cd_layout"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center">


        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/circle_gray_border"
            android:src="@drawable/icon_chanpian" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_center"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            app:shapeAppearance="@style/CircleStyle"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_cd_default_bg" />

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_point"
        android:layout_width="90dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="120dp"
        android:layout_toRightOf="@+id/v_center"
        android:src="@drawable/icon_play_point" />
</FrameLayout>